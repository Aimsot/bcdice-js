{
  "name": "bcdice",
  "version": "2.0.0-alpha.0",
  "description": "BCDice ported for JavaScript",
  "keywords": [
    "dice"
  ],
  "homepage": "https://github.com/bcdice/bcdice-js#readme",
  "bugs": {
    "url": "https://github.com/bcdice/bcdice-js/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bcdice/bcdice-js.git"
  },
  "license": "BSD-3-Clause",
  "author": "bcdice",
  "main": "lib/index.js",
  "scripts": {
    "build": "run-s -s build:rake build:tsc",
    "build:rake": "bundle exec rake",
    "build:tsc": "tsc -b ts",
    "clean": "rimraf lib",
    "example": "run-s -s example:*",
    "example:basic": "cd examples && ts-node --file ./basic",
    "example:user_defined_dice_table": "cd examples && ts-node ./user_defined_dice_table",
    "test": "cd ts && mocha -r ts-node/register -r source-map-support/register --reporter dot --timeout 5000 ./**/*.test.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/lodash": "^4.14.167",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.17",
    "@types/semver": "^7.3.4",
    "@types/sinon": "^9.0.10",
    "@types/sinon-chai": "^3.2.5",
    "chai": "^4.2.0",
    "mocha": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "semver": "^7.3.4",
    "sinon": "^9.2.2",
    "sinon-chai": "^3.5.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "source-map-support": "^0.5.19"
  }
}
